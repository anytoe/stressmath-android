<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/TextIcons</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="HugeText" parent="Text">
        <item name="android:textSize">42sp</item>
    </style>

    <style name="LargeText" parent="Text">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="MediumText" parent="Text">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SmallText" parent="Text">
        <item name="android:textSize">18sp</item>
    </style>

    <!--Concrete Elements-->

    <style name="StandardButton" parent="LargeText">
        <item name="android:textSize">32sp</item>
        <item name="android:background">@drawable/standardbutton</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="GameSolutionButton" parent="StandardButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">@dimen/default_margin_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/standardbutton</item>
    </style>

    <style name="Activity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/Primary</item>
    </style>

    <style name="CountDown" parent="Text">
        <item name="android:textSize">128sp</item>
    </style>

    <style name="ButtonContainerParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">100</item>
    </style>

    <style name="ButtonContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">80</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ContentContainerParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">100</item>
    </style>

    <style name="ContentContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">90</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HighscoreText" parent="SmallText">
        <item name="android:gravity">right</item>
    </style>

</resources>
